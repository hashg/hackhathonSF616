{
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
    }
  },
  "env": {
    "es6": true,
    "meteor": true,
    "browser": true,
    "node": true,
  },
  "extends": ["airbnb-base", "plugin:meteor/recommended"],
  "rules": {
    "semi": 0,
    "quotes": 0,
    "max-len": 0,
    "no-underscore-dangle": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "import/first": "off",
    "import/no-unresolved": [
      2, { "ignore": ["^meteor/"] }
    ],
    "class-methods-use-this": 0,
    "arrow-body-style": 0,
    "async-await/space-after-async": 2,
    "async-await/space-after-await": 2,
    "func-names": 0,
    "prefer-arrow-callback": 0,
    "no-plusplus": 0,
    "meteor/audit-argument-checks": 0,
    "consistent-return": 0,
    "no-extraneous-dependencies": 0,
    "no-loop-func": 0,
    "no-lonely-if": 0,
    "camelcase": 0,
    "quote-props": 0,
    "no-unreachable": 0,
    "import/prefer-default-export": 0,
    "indent": 0,
    "import/no-extraneous-dependencies": 0,
    "no-else-return": 0,
    "no-nested-ternary": 0,
    "object-curly-newline": 0
  },
  "globals": {
    "Meteor": true,
    "meteor": true,
    "Roles": true
  },
  "settings": {
    "import/resolver": "meteor"
  },
  "plugins": [
    "react",
    "meteor",
    "async-await"
  ]
}
